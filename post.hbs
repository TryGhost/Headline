{{!< default}}

<main class="gh-main">
    {{#post}}
        <article class="gh-article {{post_class}}">

            <header class="gh-article-header gh-canvas">
                {{#if primary_tag}}
                    <a class="gh-article-tag" href="{{primary_tag.url}}">{{primary_tag.name}}</a>
                {{/if}}

                <h1 class="gh-article-title">{{title}}</h1>

                {{> "post-meta"}}

                {{#if custom_excerpt}}
                    <p class="gh-article-excerpt">{{custom_excerpt}}</p>
                {{/if}}

                {{> "feature-image"}}
            </header>

            <section class="gh-content gh-canvas">
                {{content}}
            </section>

        </article>
    {{/post}}

    {{> "related-posts"}}

    {{#post}}
        {{> "comments"}}
    {{/post}}

    <div class="gh-content">
        <h3>Testing featured posts x3</h3>
        {{> "featured-posts"}}
        {{> "featured-posts"}}
        {{> "featured-posts"}}

        <h3>Testing top tags x3</h3>
        {{> "popular-tags"}}
        {{> "popular-tags"}}
        {{> "popular-tags"}}

        <h3>Testing getting started x3</h3>
        {{> "getting-started-posts"}}
        {{> "getting-started-posts"}}
        {{> "getting-started-posts"}}

        <h3>Testing non-featured posts x3</h3>
        {{> "non-featured-posts"}}
        {{> "non-featured-posts"}}
        {{> "non-featured-posts"}}
    </div>

</main>